<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="default" extends="struts-default">
		<!-- Action par défaut -->
		<default-action-ref name="index" />
		<!-- Results globaux -->
		<global-results>
			<result name="error">/jsp/error.jsp</result>
		</global-results>
		<!-- Action "index" -->
		<action name="index">
			<result>/jsp/index.jsp</result>
		</action>
		
		<!-- L E S  S I T E S -->
		<!-- Action listant les sites d'escalade -->
		<action name="site_list" class="com.openclassrooms.escalade.action.GestionSiteAction" method="doList">
			<result>/jsp/site/list.jsp</result>
		</action>
		<!-- Action affichant le détail d'un site -->
		<action name="site_detail" class="com.openclassrooms.escalade.action.GestionSiteAction" method="doDetail">
			<interceptor-ref name="store">
				<param name="operationMode">RETRIEVE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="success">/jsp/site/detail.jsp</result>
		</action>
		<!-- Actions permettant de créer un site d'escalade -->
		<action name="site_new" class="com.openclassrooms.escalade.action.GestionSiteAction" method="doCreate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/site/new.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">site_detail</param>
				<param name="id">${site.id}</param>
			</result>
		</action>
		<!-- Actions permettant de mettre à jour un site d'escalade -->
		<action name="site_update" class="com.openclassrooms.escalade.action.GestionSiteAction" method="doUpdate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/site/update.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">site_detail</param>
				<param name="id">${site.id}</param>
			</result>
		</action>
		<!-- Action supprimant un site -->
		<action name="site_delete" class="com.openclassrooms.escalade.action.GestionSiteAction" method="doDelete">
			<result name="success">/jsp/site/list.jsp</result>
		</action>
		
		
		<!-- L E S  T O P O S -->
		<!-- Action listant les topos d'escalade -->
		<action name="topo_list" class="com.openclassrooms.escalade.action.GestionTopoAction" method="doList">
			<result>/jsp/topo/list.jsp</result>
		</action>
		<!-- Action affichant le détail d'un topo d'escalade -->
		<action name="topo_detail" class="com.openclassrooms.escalade.action.GestionTopoAction" method="doDetail">
			<result name="success">/jsp/topo/detail.jsp</result>
		</action>
		
		<!-- Actions permettant de créer un topo d'escalade -->
		<action name="topo_new" class="com.openclassrooms.escalade.action.GestionTopoAction" method="doCreate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/topo/new.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">topo_detail</param>
				<param name="id">${topo.id}</param>
			</result>
		</action>
		
		<!-- Actions permettant de mettre à jour un topo d'escalade -->
		<action name="topo_update" class="com.openclassrooms.escalade.action.GestionTopoAction" method="doUpdate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/topo/update.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">topo_detail</param>
				<param name="id">${topo.id}</param>
			</result>
		</action>
		
		<!-- Action supprimant un topo -->
		<action name="topo_delete" class="com.openclassrooms.escalade.action.GestionTopoAction" method="doDelete">
			<result name="success">/jsp/topo/list.jsp</result>
		</action>
		
		
		<!-- L E S  C O M M E N T A I R E S -->
		
		<!-- Actions permettant de créer un commentaire sur un site -->
		<action name="commentaire_site_new" class="com.openclassrooms.escalade.action.GestionCommentaireSiteAction" method="doCreate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			
			<result name="input">/jsp/commentaire_site/new.jsp</result>
			
			<result name="success" type="redirectAction">
				<param name="actionName">site_detail</param>
				<param name="id">${siteId}</param>
			</result>
		</action>
		
		<!-- Actions permettant de mettre à jour un commentaire sur un site -->
		<action name="commentaire_site_update" class="com.openclassrooms.escalade.action.GestionCommentaireSiteAction" method="doUpdate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/commentaire_site/update.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">site_detail</param>
				<param name="id">${siteId}</param>
			</result>
		</action>
		
		<!-- Action supprimant un commentaire sur un site-->
		<action name="commentaire_site_delete" class="com.openclassrooms.escalade.action.GestionCommentaireSiteAction" method="doDelete">
		
		   <interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			
			<result name="success" type="redirectAction">
				<param name="actionName">site_detail</param>
				<param name="id">${siteId}</param>
			</result>
			
		</action>
		
		
		<!-- Actions permettant de créer un commentaire sur un topo -->
		<action name="commentaire_topo_new" class="com.openclassrooms.escalade.action.GestionCommentaireTopoAction" method="doCreate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			
			<result name="input">/jsp/commentaire_topo/new.jsp</result>
			
			<result name="success" type="redirectAction">
				<param name="actionName">topo_detail</param>
				<param name="id">${topoId}</param>
			</result>
		</action>
		
		<!-- Actions permettant de mettre à jour un commentaire sur un topo -->
		<action name="commentaire_topo_update" class="com.openclassrooms.escalade.action.GestionCommentaireTopoAction" method="doUpdate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/commentaire_topo/update.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">topo_detail</param>
				<param name="id">${topoId}</param>
			</result>
		</action>
		
		<!-- Action supprimant un commentaire sur un topo-->
		<action name="commentaire_topo_delete" class="com.openclassrooms.escalade.action.GestionCommentaireTopoAction" method="doDelete">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="success" type="redirectAction">
				<param name="actionName">topo_detail</param>
				<param name="id">${topoId}</param>
			</result>
		</action>
		
		
		<!-- L E S  P R E T S -->
		<!-- Action listant les prets d'escalade -->
		<action name="pret_list" class="com.openclassrooms.escalade.action.GestionPretAction" method="doList">
			<result>/jsp/pret/list.jsp</result>
		</action>
		<!-- Action affichant le détail d'un pret d'escalade -->
		<action name="pret_detail" class="com.openclassrooms.escalade.action.GestionPretAction" method="doDetail">
			<result name="success">/jsp/pret/detail.jsp</result>
		</action>
		
		<!-- Actions permettant de créer un pret d'escalade -->
		<action name="pret_new" class="com.openclassrooms.escalade.action.GestionPretAction" method="doCreate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/pret/new.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">pret_detail</param>
				<param name="id">${pret.id}</param>
			</result>
		</action>
		<!-- Actions permettant de mettre à jour un pret d'escalade -->
		<action name="pret_update" class="com.openclassrooms.escalade.action.GestionPretAction" method="doUpdate">
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			<result name="input">/jsp/pret/update.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">pret_detail</param>
				<param name="id">${pret.id}</param>
			</result>
		</action>
		<!-- Action supprimant un pret -->
		<action name="pret_delete" class="com.openclassrooms.escalade.action.GestionPretAction" method="doDelete">
			<result name="success">/jsp/pret/list.jsp</result>
		</action>
		
	</package>
</struts>